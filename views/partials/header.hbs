                            </a>
                        </li>
                    {{/if}}
                    <li class="nav-item">
                        <a href="/logout" class="nav-link border border-light rounded waves-effect btn-primary">
                            <i class="fa fa-user mr-2"></i>Cerrar sesión
                        </a>
                    </li>                 
                </ul>
               
                {{else}}
                <ul class="navbar-nav nav-flex-icons">
                    <li class="nav-item">
                        <a href="/login" class="nav-link border border-light rounded waves-effect btn-primary">
                            <i class="fa fa-user mr-2"></i>Iniciar sesión
                        </a>
                    </li>
                </ul>
                {{/if}}


